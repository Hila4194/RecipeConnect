<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:padding="24dp">

    <!-- Container for logo + texts + button -->
    <LinearLayout
        android:id="@+id/centerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logoImageView"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_logo"
            android:scaleType="centerInside"
            app:strokeColor="@android:color/black"
            app:strokeWidth="1dp"
            android:layout_marginBottom="24dp"/>

        <!-- Description 1 -->
        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="RecipeConnect is where food lovers unite to create, share, and discover recipes."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:padding="12dp"/>

        <!-- Description 2 -->
        <TextView
            android:id="@+id/description2TextView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Join our vibrant community to connect, inspire, and turn every dish into a story!"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <!-- Start Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Here!"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple_700"
            android:layout_marginTop="32dp"
            app:cornerRadius="20dp"
            app:icon="@android:drawable/ic_media_next"
            app:iconGravity="textEnd"
            app:iconPadding="8dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
